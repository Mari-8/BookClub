<h2><%= @bookshelf.shelf_name %></h2>
<br><br>
<% @bookshelf.books.each do |book| %> 
  <div>
    <%= image_tag "#{book.image_url}" %>
    <%= book.title %> - <%= book.author_name %><br>
    <div class="button is-ghost"><%= link_to "View", book_path(book) %></div>
  </div>
<% end %> 

<br><br>
<h3> Add a new book to this shelf </h3> 
    <div class="button is-ghost"><%= link_to "Add book", new_bookshelf_book_path(@bookshelf)%></div>
<br>
<h3>Move an existing book to this shelf</h3>
    <%= form_tag('/add_to_shelf') do %>
        <%= hidden_field_tag :bookshelf_id, @bookshelf.id %>
        <%= collection_select(:book, :book_id, current_user.books, :id, :title) %>
        <br>
        <%= submit_tag "Add Book" %> 
    <% end %> 

 