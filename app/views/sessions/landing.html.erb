



 <section class="section">
    <div class="container text has-text-centered">
        <br>
        <h1 class="title is-size-1 has-text-weight-bold has-text-white">Book club</h1>
        <div class="block"><img src="placeholder/icons/unicorn.svg" alt=""><img src="placeholder/icons/unicorn.svg" alt=""><img src="placeholder/icons/unicorn.svg" alt=""></div>
        <p class="is-size-3 has-text-weight-bold has-text-white">Welcome, or welcome back! Log in or sign up to enter the club, save your favorite books and start discussions about them with others!</p>
       
    </div>
 </section>
 <section class="section mb-6">
  <div class="columns is-multiline is-4">
    <div class="column is-one-third"></div>
        <div class="column is-one-third">
              <div class="card is-vcentered">
                    <div class="card-content has-text-centered">
                      <div class="container">
                      <br>
                        <div class="field">
                          <div class="button button">
                            <%= link_to("Log in with Google", '/auth/google_oauth2', method: :post) %> 
                          </div>
                        </div>
                        <div class="field">
                          <div class="button">
                          <i class="fab fa-facebook"></i><%= link_to("Log in with Facebook", '/auth/facebook', method: :post) %>
                          </div>
                        </div>
                        <div class="field">
                          <div class="button">
                          <i class="fab fa-github "></i><%= link_to("Log in with Github", '/auth/github', method: :post) %>
                          </div>
                        </div>
                      </div>
                    <br>
                    <h3>Or</h3> 
                    <br>
                    <%= form_tag 'login' do %>
                      <div class="field">
                            <div class="control has-text-weight-semibold is-family-sans-serif">
                               <%= label_tag :username %><br>
                               <%= text_field_tag :username %> 
                            </div>
                        </div>
                        <div class="field">
                            <div class="control has-text-weight-semibold is-family-sans-serif"><br>
                               <%= label_tag :password %><br>
                               <%= password_field_tag :password %> 
                            </div>
                        </div>
                        <br>
                        <div class="field">
                            <button class="button is-dark is-fullwidth">Sign in!</button>
                        </div>
                        <br>
                        <h2>Dont have an account? <%= link_to "Sign up here", new_user_path %></h2>
                        <br>
                    <% end %>
                </div>
              </div>
    </div>
    
    <div class="column is-one-third"></div>
  
 </div>
</div>




